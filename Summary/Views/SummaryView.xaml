            <TabItem x:Name="UnitTab" Header="Unit Summary" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid>
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="White"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="8*"/>
                        <RowDefinition Height="12*"/>
                        <RowDefinition Height="2"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="85"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.Row="2" Fill="#FF666666" HorizontalAlignment="Stretch" Width="80" VerticalAlignment="Stretch" Margin="0,5,0,5" />
                    <StackPanel Grid.Row="2" VerticalAlignment="Center" Orientation="Vertical">
                        <Label  Content="Open" VerticalAlignment="Center" Foreground="White" 
                                FontWeight="Medium" FontSize="14" HorizontalAlignment="Center">
                            <Label.Effect>
                                <DropShadowEffect/>
                            </Label.Effect>
                        </Label>
                        <Label  Content="Unit" VerticalAlignment="Center" Foreground="White" 
                                FontWeight="Medium" FontSize="14" HorizontalAlignment="Center">
                            <Label.Effect>
                                <DropShadowEffect/>
                            </Label.Effect>
                        </Label>
                    </StackPanel>
                    
                    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Background="#FFE6E4E4" Margin="0,2,0,0"  >
                        <Menu HorizontalAlignment="Left" Height="25" Grid.Column="1"  
                                  VerticalAlignment="Center" Width="auto" FontSize="14" Background="Transparent"
                                  HorizontalContentAlignment="Left" Margin="0,0,0,0" Foreground="Black" >
                            <MenuItem Header="Configuration" Width="auto"  >
                                <MenuItem Header="OpenUnit Summary Table" Width="auto"  Command="{Binding OpenUnitFieldsCommand}"/>
                                <MenuItem Header="ClosedUnit Summary Table" Width="auto"  Command="{Binding CloseUnitFieldsCommand}"/>
                            </MenuItem>
                            <MenuItem Header="Summaries" Width="auto" Visibility="Hidden">
                                <MenuItem Header="Close Select OpenUnit" Width="auto" Command="{Binding ClosedSelUnitCommand}"/>
                            </MenuItem>
                        </Menu>
                    </Grid>

                    <DataGrid   x:Name="DataGridOpenUnit" Grid.Row="2" Grid.Column="1" Margin="2" Background="Black"
                                  AutoGeneratingColumn="OnAutoGeneratingColumnOpenLot"
                                  HorizontalAlignment="Stretch"
                                  HorizontalContentAlignment="Center"
                                  CanUserAddRows="False" 
                                  ColumnWidth="auto"
                                  AutoGenerateColumns="true" 
                                  SelectionMode="Single"
                                  ItemsSource="{Binding OpenLotTable}"
                                  SelectedIndex="{Binding SelecOpenLotIdx}"
                                  AlternatingRowBackground="#FFF3F2EF" 
                                  HorizontalGridLinesBrush="Gray" 
                                  VerticalGridLinesBrush="Gray"
                                  CanUserReorderColumns="False"
                                  CanUserSortColumns="False"
                                  EnableRowVirtualization="True" 
                                  EnableColumnVirtualization="True"
                                  IsSynchronizedWithCurrentItem="false"
                                  IsReadOnly="True"
                                  FontWeight="Medium">
                        <DataGrid.Effect>
                            <DropShadowEffect ShadowDepth="4"
                                          Direction="330"
                                          Color="Black"
                                          Opacity="0.5"
                                          BlurRadius="4"/>
                        </DataGrid.Effect>
                        <DataGrid.Columns>
                            <DataGridTextColumn>
                                <DataGridTextColumn.Foreground>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black" Offset="0"/>
                                        <GradientStop Color="White" Offset="1"/>
                                    </LinearGradientBrush>
                                </DataGridTextColumn.Foreground>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF666666"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Normal"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="Margin" Value="0,0,0,5"/>
                                <Setter Property="Padding" Value="20,0,20,0"/>
                                <Setter Property="Height" Value="25"/>
                                <Setter Property="BorderBrush" >
                                    <Setter.Value>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="White" Offset="0"/>
                                            <GradientStop Color="Black" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>
                    <Rectangle Grid.Row="3" Fill="#FF666666" HorizontalAlignment="Stretch"  Width="80"
                               VerticalAlignment="Stretch" Margin="0,5,0,5" />
                    <StackPanel Grid.Row="3" VerticalAlignment="Center" Orientation="Vertical">
                        <Label  Content="Closed" VerticalAlignment="Center" Foreground="White" 
                                FontWeight="Medium" FontSize="14" HorizontalAlignment="Center">
                            <Label.Effect>
                                <DropShadowEffect/>
                            </Label.Effect>
                        </Label>
                        <Label  Content="Unit" VerticalAlignment="Center" Foreground="White"
                                FontWeight="Medium" FontSize="14" HorizontalAlignment="Center">
                            <Label.Effect>
                                <DropShadowEffect/>
                            </Label.Effect>
                        </Label>
                    </StackPanel>
                    <DataGrid   x:Name="DataGridClosedUnit" Grid.Row="3" Grid.Column="1" Margin="2" Background="Black"
                                  AutoGeneratingColumn="OnAutoGeneratingColumnCloseLot"
                                  HorizontalAlignment="Stretch"
                                  HorizontalContentAlignment="Center"
                                  ColumnWidth="auto"
                                  CanUserAddRows="False" 
                                  AutoGenerateColumns="true" 
                                  SelectionMode="Single"
                                  ItemsSource="{Binding CloseLotTable}"
                                  SelectedIndex="{Binding SelectClosedLotIdx}"
                                  AlternatingRowBackground="#FFF3F2EF" 
                                  HorizontalGridLinesBrush="Gray" 
                                  VerticalGridLinesBrush="Gray"
                                  CanUserReorderColumns="False"
                                  CanUserSortColumns="False"
                                  EnableRowVirtualization="True" 
                                  EnableColumnVirtualization="True"
                                  IsSynchronizedWithCurrentItem="false"
                                  IsReadOnly="True"
                                  FontWeight="Medium">
                        <DataGrid.Effect>
                            <DropShadowEffect ShadowDepth="4"
                                          Direction="330"
                                          Color="Black"
                                          Opacity="0.5"
                                          BlurRadius="4"/>
                        </DataGrid.Effect>
                        <DataGrid.Columns>
                            <DataGridTextColumn>
                                <DataGridTextColumn.Foreground>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black" Offset="0"/>
                                        <GradientStop Color="White" Offset="1"/>
                                    </LinearGradientBrush>
                                </DataGridTextColumn.Foreground>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF666666"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Normal"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="Margin" Value="0,0,0,5"/>
                                <Setter Property="Padding" Value="20,0,20,0"/>
                                <Setter Property="Height" Value="25"/>
                                <Setter Property="BorderBrush" >
                                    <Setter.Value>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="White" Offset="0"/>
                                            <GradientStop Color="Black" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>

                </Grid>
                
                
              
            </TabItem>
        </TabControl>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0" Height="27" VerticalAlignment="Bottom">
            <TextBlock Margin="0,0,0,0" Width="260" Text="{Binding TextDebug}" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="Blue"/>
            <TextBlock  Margin="10,0,10,0" Width="200" Text="{Binding TextMsg}" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Blue"/>
            
        </StackPanel>

    </Grid>
</UserControl>
