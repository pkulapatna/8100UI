                                    <DropShadowEffect/>
                                </Label.Effect>
                            </Label>
                            <Label Grid.Column="1" Grid.Row="2"  HorizontalAlignment="Center" 
                       FontSize="16"   VerticalAlignment="Center" Panel.ZIndex="20"
                       Content="Shift" Foreground="White">
